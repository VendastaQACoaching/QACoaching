                        required
                    />
                </div>

                <div class="form-group">
                    <label class="form-label" for="responderEmail">
                        Your Email <span class="required">*</span>
                    </label>
                    <input 
                        type="email" 
                        id="responderEmail" 
                        class="form-input" 
                        placeholder="your.email@example.com"
                        required
                    />
                </div>

                <div class="form-group">
                    <label class="form-label" for="comments">
                        Comments <span style="color: #6c757d; font-weight: normal;">(Optional)</span>
                    </label>
                    <textarea 
                        id="comments" 
                        class="form-input" 
                        placeholder="Add any additional comments or feedback..."
                    ></textarea>
                </div>

                <div class="button-group">
                    <button type="button" class="btn btn-accept" id="acceptBtn" onclick="submitResponse('accept')">
                        ‚úÖ Accept Audit
                    </button>
                    <button type="button" class="btn btn-dispute" id="disputeBtn" onclick="submitResponse('dispute')">
                        ‚ö†Ô∏è Dispute Audit
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Google Apps Script URL
        const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbyJmRKtQiGB3C35JIiFGNas4KYqD3lHmHk9FmldGj6ELemprI7O8Nvo4HhAAGcB0ZZysg/exec';

        let auditData = {};

        // Parse URL parameters
        function getUrlParams() {
            const params = new URLSearchParams(window.location.search);
            return {
                id: params.get('id'),
                action: params.get('action'),
                specialist: params.get('specialist'),
                auditor: params.get('auditor')
            };
        }

        // Initialize page
        window.addEventListener('DOMContentLoaded', () => {
            const params = getUrlParams();
            
            if (!params.id || !params.action || !params.specialist || !params.auditor) {
                showError('Invalid URL. Missing required parameters.');
                return;
            }

            auditData = params;

            // Update header based on action
            const headerIcon = document.getElementById('headerIcon');
            const headerTitle = document.getElementById('headerTitle');
            const headerSubtitle = document.getElementById('headerSubtitle');

            if (params.action === 'accept') {
                headerIcon.textContent = '‚úÖ';
                headerTitle.textContent = 'Accept Audit';
                headerSubtitle.textContent = 'Confirm you accept the audit results';
                document.getElementById('disputeBtn').style.display = 'none';
            } else if (params.action === 'dispute') {
                headerIcon.textContent = '‚ö†Ô∏è';
                headerTitle.textContent = 'Dispute Audit';
                headerSubtitle.textContent = 'Provide your reason for disputing';
                document.getElementById('acceptBtn').style.display = 'none';
            }

            // Display audit info
            document.getElementById('displayAuditId').textContent = params.id;
            document.getElementById('displaySpecialist').textContent = params.specialist;
            document.getElementById('displayAuditor').textContent = params.auditor;

            // Show form
            document.getElementById('loadingState').style.display = 'none';
            document.getElementById('formContainer').style.display = 'block';
        });

        // Submit response
        async function submitResponse(action) {
            const responderName = document.getElementById('responderName').value.trim();
            const responderEmail = document.getElementById('responderEmail').value.trim();
            const comments = document.getElementById('comments').value.trim();

            // Validation
            if (!responderName) {
                showError('Please enter your name');
                return;
            }

            if (!responderEmail) {
                showError('Please enter your email');
                return;
            }

            if (!validateEmail(responderEmail)) {
                showError('Please enter a valid email address');
                return;
            }

            // Disable buttons
            const acceptBtn = document.getElementById('acceptBtn');
            const disputeBtn = document.getElementById('disputeBtn');
            acceptBtn.disabled = true;
            disputeBtn.disabled = true;

            if (action === 'accept') {
                acceptBtn.textContent = 'Submitting...';
            } else {
                disputeBtn.textContent = 'Submitting...';
            }

            try {
                const payload = {
                    action: action === 'accept' ? 'accept_audit' : 'dispute_audit',
                    auditId: auditData.id,
                    specialistName: auditData.specialist,
                    responderName: responderName,
                    responderEmail: responderEmail,
                    auditorEmail: auditData.auditor,
                    comments: comments || ''
                };

                const response = await fetch(SCRIPT_URL, {
                    method: 'POST',
                    mode: 'no-cors',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(payload)
                });

                // Since we're using no-cors, we can't read the response
                // But if no error is thrown, we assume success
                showSuccess(action === 'accept' ? 
                    'Audit accepted successfully! The auditor has been notified.' :
                    'Audit disputed successfully! The auditor has been notified.');

                // Hide form after 2 seconds
                setTimeout(() => {
                    document.getElementById('formContainer').style.display = 'none';
                }, 2000);

            } catch (error) {
                console.error('Error:', error);
                showError('An error occurred. Please try again.');
                
                // Re-enable buttons
                acceptBtn.disabled = false;
                disputeBtn.disabled = false;
                acceptBtn.textContent = '‚úÖ Accept Audit';
                disputeBtn.textContent = '‚ö†Ô∏è Dispute Audit';
            }
        }

        function validateEmail(email) {
            return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
        }

        function showSuccess(message) {
            const successDiv = document.getElementById('successMessage');
            successDiv.textContent = message;
            successDiv.style.display = 'block';
            document.getElementById('errorMessage').style.display = 'none';
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            document.getElementById('successMessage').style.display = 'none';
        }
    </script>
</body>
</html>
