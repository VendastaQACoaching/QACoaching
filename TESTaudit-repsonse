<body>
    <div class="container">
        <div class="success-message" id="successMessage"></div>
        <div class="error-message" id="errorMessage"></div>

        <div class="header">
            <div class="header-icon" id="headerIcon">üìã</div>
            <h1 id="headerTitle">Loading...</h1>
            <p id="headerSubtitle" style="color: #6c757d; margin-top: 10px;"></p>
        </div>

        <div id="loadingState" class="loading">
            <p>Loading audit details...</p>
        </div>

        <div id="formContainer" style="display: none;">
            <div class="info-box">
                <div class="info-row">
                    <span class="info-label">Audit ID:</span>
                    <span class="info-value" id="displayAuditId">-</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Specialist:</span>
                    <span class="info-value" id="displaySpecialist">-</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Auditor:</span>
                    <span class="info-value" id="displayAuditor">-</span>
                </div>
            </div>

            <form id="responseForm">
                <div class="form-group">
                    <label class="form-label" for="responderName">
                        Your Name <span class="required">*</span>
